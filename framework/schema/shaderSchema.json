{
  "$id": "shaderSchema.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Shader Material Definition Schema",
  "version": "1.0.0",

  "definitions": {
    "Pass": {
      "type": "object",
      "description": "Shaders to render this material in the named pass",
      "properties": {
        "Name": {
          "type": "string",
          "description": "Pass name (each pass should have a unique name)",
          "minLength": 1
        },
        "Shaders": {
          "type": "object",
          "description": "vulkan shaders",
          "properties": {
            "Vertex": {
              "type": "string",
              "description": "filename of the spir-v vertex shader"
            },
            "Fragment": {
              "type": "string",
              "description": "filename of the spir-v fragment shader"
            },
            "Compute": {
              "type": "string",
              "description": "filename of the spir-v compute shader"
            },
            "RayGeneration": {
              "type": "string",
              "description": "filename of the spir-v ray generation shader"
            },
            "RayClosestHit": {
              "type": "string",
              "description": "filename of the spir-v ray closest hit shader"
            },
            "RayAnyHit": {
              "type": "string",
              "description": "filename of the spir-v ray 'any' hit shader"
            },
            "RayMiss": {
              "type": "string",
              "description": "filename of the spir-v ray miss shader"
            },
            "Mesh": {
              "type": "string",
              "description": "filename of the spir-v mesh shader"
            },
            "Task": {
              "type": "string",
              "description": "filename of the spir-v task shader"
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        },
        "DescriptorSets": {
          "type": "array",
          "description": "vulkan descriptor sets",
          "items": {
            "type": "object",
            "description": "descriptor set",
            "properties": {
              "Name": {
                "type": "string"
              },
              "Buffers": {
                "type": "array",
                "items": {
                  "type": "object",
                  "description": "buffers in descriptor set",
                  "properties": {
                    "Type": {
                      "type": "string",
                      "description": "Descriptor set(s) type",
                      "enum": [ "UniformBuffer", "ImageSampler", "ImageSampled", "Sampler", "StorageBuffer", "ImageStorage", "InputAttachment", "AccelerationStructure", "DescriptorTable", "Unused" ]
                    },
                    "Stages": {
                      "type": "array",
                      "description": "Stages that this buffer is bound to",
                      "items": {
                        "type": "string",
                        "description": "Stage name",
                        "enum": [ "Vertex", "Fragment", "Compute", "RayGeneration", "RayClosestHit", "RayAnyHit", "RayMiss", "Mesh", "Task" ]
                      },
                      "uniqueItems": true,
                      "minItems": 1,
                      "additionalProperties": false
                    },
                    "Count": {
                      "type": "integer",
                      "minimum": 0,
                      "default": 1,
                      "description": "Number of sets of this type (0=bindless; default=1)"
                    },
                    "ReadOnly": {
                      "type": "boolean",
                      "description": "Buffer is not written to (by this Pass).  Implied 'true' for ImageSampler, ImageSampled, Sampler, UniformBuffer, InputAttachment, AccelerationStructure."
                    },
                    "Names": {
                      "type": "array",
                      "description": "Identifier for each buffer (for code lookup)",
                      "items": {
                        "type": "string",
                        "minLength": 1
                      }
                    }
                  },
                  "required": [ "Type", "Stages" ],
                  "additionalProperties": false
                }
              }
            },
            "additionalProperties": false,
            "minItems": 1
          }
        },
        "RootSamplers": {
          "type": "array",
          "description": "Immutable Root signature Texture Samplers (DX12 only)",
          "items": {
            "type": "object",
            "description": "root sampler",
            "properties": {
              "Mode": {
                "type": "string",
                "enum": [ "Undefined", "Repeat", "MirroredRepeat", "ClampEdge", "ClampBorder", "MirroredClampEdge" ]
              },
              "Filter": {
                "type": "string",
                "enum": [ "Undefined", "Nearest", "Linear" ]
              },
              "MipFilter": {
                "type": "string",
                "enum": [ "Undefined", "Nearest", "Linear" ]
              },
              "MipBias": {
                "type": "number"
              },
              "Anisotropy": {
                "type": "integer"
              },
              "MinLod": {
                "type": "number"
              },
              "MaxLod": {
                "type": "number"
              }
            },
            "additionalProperties": false
          },
          "additionalProperties": false,
          "minItems": 0
        },
        "VertexBindings": {
          "type": "array",
          "description": "Vertex set binding(s)",
          "items": {
            "type": "string",
            "description": "Vertex layout name",
            "minLength": 1
          },
          "additionalProperties": false,
          "minItems": 0
        },
        "InstanceBindings": {
          "type": "array",
          "description": "Instance (rate) vertex set binding(s)",
          "items": {
            "type": "string",
            "description": "Vertex layout name",
            "minLength": 1
          },
          "additionalProperties": false,
          "minItems": 1
        },
        "SpecializationConstants": {
          "type": "array",
          "description": "Specialization Constants",
          "items": {
            "type": "object",
            "description": "Specialization Constant.  Passed to the shader creation in the order listed here (first item is slot 0).",
            "properties": {
              "Name": {
                "type": "string"
              },
              "Type": {
                "type": "string",
                "enum": [ "Int32", "Float", "Boolean" ],
                "description": "Constant data type"
              }
            },
            "additionalProperties": false
          },
          "additionalProperties": false,
          "minItems": 0
        },
        "FixedFunction": {
          "type": "object",
          "description": "fixedFunction settings",
          "properties": {
            "DepthTestEnable": {
              "type": "boolean"
            },
            "DepthWriteEnable": {
              "type": "boolean"
            },
            "DepthClampEnable": {
              "type": "boolean"
            },
            "DepthBiasEnable": {
              "type": "boolean"
            },
            "DepthBiasConstant": {
              "type": "number"
            },
            "DepthBiasClamp": {
              "type": "number"
            },
            "DepthBiasSlope": {
              "type": "number"
            },
            "CullFrontFace": {
              "type": "boolean"
            },
            "CullBackFace": {
              "type": "boolean"
            },
            "DepthCompareOp": {
              "type": "string",
              "enum": [ "LessEqual", "Equal", "Greater" ]
            }
          },
          "additionalProperties": false
        },
        "Outputs": {
          "type": "array",
          "description": "Output(s) description (frag shader)",
          "items": {
            "type": "object",
            "description": "fixedFunction settings",
            "properties": {
              "BlendEnable": {
                "type": "boolean"
              },
              "SrcColorBlendFactor": {
                "type": "string",
                "enum": [ "Zero", "One", "SrcAlpha", "OneMinusSrcAlpha", "DstAlpha", "OneMinusDstAlpha" ]
              },
              "DstColorBlendFactor": {
                "type": "string",
                "enum": [ "Zero", "One", "SrcAlpha", "OneMinusSrcAlpha", "DstAlpha", "OneMinusDstAlpha" ]
              },
              "SrcAlphaBlendFactor": {
                "type": "string",
                "enum": [ "Zero", "One", "SrcAlpha", "OneMinusSrcAlpha", "DstAlpha", "OneMinusDstAlpha" ]
              },
              "DstAlphaBlendFactor": {
                "type": "string",
                "enum": [ "Zero", "One", "SrcAlpha", "OneMinusSrcAlpha", "DstAlpha", "OneMinusDstAlpha" ]
              },
              "ColorWriteMask": {
                "type": "integer",
                "minimum": 0
              },
              "Name": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        },
        "WorkGroup": {
          "type": "object",
          "description": "workgroup settings",
          "properties": {
            "LocalSize": {
              "type": "array",
              "maxItems": 3,
              "minItems": 3,
              "items": {
                "type": "integer",
                "minimum": 1,
                "default": 1
              },
              "description": "local workgroup size (x,y,z)"
            },
            "PerTileDispatch": {
              "type": "boolean",
              "description": "Enable per tile dispatch mode (threads dispatched = Number of pixels in tile x rate setting in shader')"
            }
          },
          "oneOf": [
            { "required": [ "LocalSize" ] },
            { "required": [ "PerTileDispatch" ] }
          ],
          "additionalProperties": false
        },
        "RayTracing": {
          "type": "object",
          "description": "ray tracing settings",
          "properties": {
            "MaxRecursionDepth": {
              "type": "integer",
              "minimum": 1,
              "default": 1,
              "description": "Maximum depth of ray recursion"
            }
          },
          "required": [ "MaxRecursionDepth" ],
          "additionalProperties": false
        }
      },
      "required": [ "Name", "Shaders" ],
      "additionalProperties": false
    },
    "Vertex": {
      "type": "object",
      "description": "Vertex layout",
      "properties": {
        "Span": {
          "type": "integer",
          "minimum": 0,
          "description": "Span in bytes"
        },
        "Rate": {
          "type": "string",
          "description": "Buffer input rate",
          "enum": [ "Vertex", "Instance" ]
        },
        "Name": {
          "type": "string",
          "description": "Vertex format name",
          "minLength": 1
        },
        "Elements": {
          "type": "array",
          "description": "Individual data elements in this layout",
          "items": {
            "type": "object",
            "properties": {
              "Name": {
                "type": "string",
                "description": "Element name (all elements must be named or none)",
                "examples": [ "Position", "UV", "Color", "Normal" ],
                "minLength": 1
              },
              "Offset": {
                "type": "integer",
                "minimum": 0,
                "description": "Offset in bytes of this element with the span"
              },
              "Type": {
                "type": "string",
                "enum": [ "Int32", "Float", "Vec2", "Vec3", "Vec4", "Int16", "UInt16", "Float16", "F16Vec2", "F16Vec3", "F16Vec4", "I16Vec2", "I16Vec3", "I16Vec4", "U16Vec2", "U16Vec3", "U16Vec4", "IVec2", "IVec3", "IVec4", "UVec2", "UVec3", "UVec4" ],
                "description": "Element data type"
              }
            },
            "required": [ "Offset", "Type" ],
            "additionalProperties": false
          },
          "minItems": 1,
          "additionalProperties": false
        }
      },
      "required": [ "Span", "Elements" ],
      "additionalProperties": false
    }
  },
  "type": "object",
  "properties": {
    "Passes": {
      "type": "array",
      "description": "Top level array of valid passes for this material definition.",
      "items": {
        "$ref": "#/definitions/Pass"
      },
      "minItems": 0,
      "additionalProperties": false
    },
    "Vertex": {
      "type": "array",
      "description": "Top level object containing the vertex layout for this material.",
      "items": {
        "$ref": "#/definitions/Vertex"
      },
      "minItems": 0,
      "additionalProperties": false
    },
    "TileShader": {

    },
    "$schema": {
      "type": "string"
    }
  },
  "required": [ "Passes" ],
  "additionalProperties": false
}
